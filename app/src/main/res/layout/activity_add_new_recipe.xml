<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AddRecipeScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary_Light"
    android:fillViewport="true"
    android:scrollbarStyle="insideInset"
    tools:context="com.vladgeorgescu.recipesforhappiness.AddNewRecipeActivity">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/addNewRecipeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="@dimen/fui_wrapper_padding_horiz"
        android:minHeight="@dimen/browser_actions_context_menu_max_width"
        tools:ignore="ScrollViewSize">

        <LinearLayout
            android:id="@+id/stepsContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"

            app:layout_constraintBottom_toTopOf="@+id/save_recipe_fab"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider">

            <TextView
                android:id="@+id/stepsContainerLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:text="@string/steps_label"
                android:textColor="@color/colorSecondary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="91"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stepsContainerLabel">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/stepsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:clipToPadding="true"
                    android:scrollbars="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/stepsContainerLabel"
                    tools:listitem="@layout/step_row" />
            </ScrollView>

        </LinearLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/add_recipe_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/add_new_recipe_creation" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary_Dark"
            app:layout_constraintBottom_toTopOf="@+id/stepsContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ingredientsContainer" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/save_recipe_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/colorSecondary_Light"
            app:backgroundTint="@color/colorSecondary"
            app:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="@id/addNewRecipeContainer"
            app:layout_constraintEnd_toEndOf="@id/addNewRecipeContainer"
            app:srcCompat="@drawable/fui_done_check_mark" />

        <View
            android:id="@+id/sections_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary_Dark"
            app:layout_constraintBottom_toTopOf="@+id/ingredientsContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_and_url_card" />

        <LinearLayout
            android:id="@+id/ingredientsContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sections_divider">

            <TextView
                android:id="@+id/ingrediensContainerLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:lineSpacingExtra="8sp"
                android:text="@string/ingredients_label"
                android:textColor="@color/colorSecondary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ingrediensContainerLabel">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ingredientsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:clipToPadding="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ingrediensContainerLabel"
                    tools:listitem="@layout/ingredient_row">

                </android.support.v7.widget.RecyclerView>
            </ScrollView>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/name_and_url_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/colorPrimary_Light"
            app:cardCornerRadius="@dimen/browser_actions_context_menu_min_padding"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false"
            app:contentPadding="@dimen/fab_margin"
            app:layout_constraintBottom_toTopOf="@+id/sections_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_recipe_toolbar"
            tools:layout_conversion_absoluteHeight="106dp"
            tools:layout_conversion_absoluteWidth="1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/recipe_name_editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="true"
                    android:hint="@string/recipe_name_text_input_hint"
                    android:inputType="text"
                    android:textAppearance="@style/TextAppearance.Design.Hint"
                    android:textColor="@color/colorPrimary_Dark"
                    android:textColorHint="@color/colorPrimary"
                    android:textStyle="italic"
                    tools:layout_conversion_absoluteHeight="37dp"
                    tools:layout_conversion_absoluteWidth="1dp"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="24dp" />

                <EditText
                    android:id="@+id/recipe_url_editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="true"
                    android:hint="@string/recipe_url_text_input_hint"
                    android:inputType="text|textUri"
                    android:textAppearance="@style/TextAppearance.Design.Hint"
                    android:textColor="@color/colorPrimary_Dark"
                    android:textColorHint="@color/colorPrimary"
                    android:textStyle="italic"
                    tools:layout_conversion_absoluteHeight="37dp"
                    tools:layout_conversion_absoluteWidth="1dp"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="61dp" />
            </LinearLayout>


        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>


</android.widget.ScrollView>
