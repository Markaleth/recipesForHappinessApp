<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vladgeorgescu.recipesforhappiness.AddNewRecipe">

    <android.support.v7.widget.Toolbar
        android:id="@+id/recipe_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:layout_alignParentEnd="true"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/add_new_recipe_creation" />

    <android.support.v7.widget.CardView
        android:id="@+id/name_an_url_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recipe_toolbar"
        app:cardBackgroundColor="@color/colorSecondaryLight"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/recipe_name_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/recipe_name_text_input_hint"
                android:inputType="text"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/recipe_url_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/recipe_url_text_input_hint"
                android:inputType="text|textUri"
                android:textStyle="italic" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ScrollView
        android:id="@+id/ingredients_and_steps_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name_an_url_card"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:scrollbarStyle="insideInset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/recipe_steps_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:hint="@string/recipe_preparation_steps_text_input_hint"
                android:inputType="text|textMultiLine"
                android:singleLine="false"
                android:typeface="sans" />

            <EditText
                android:id="@+id/recipe_ingredients_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:hint="@string/recipe_ingredients_text_input_hint"
                android:inputType="text|textMultiLine"
                android:singleLine="false"
                android:typeface="sans" />

            <Button
                android:id="@+id/saveRecipeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="5"
                android:elevation="0dp"
                android:text="@string/save_recipe_button_label"
                android:textAlignment="center" />
        </LinearLayout>
    </ScrollView>


</android.widget.RelativeLayout>
